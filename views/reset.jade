extends layout

block body
	body
		#container
			.row.col-lg-8.col-lg-offset-2
				if message
					if message.error
						each msg in message.error
							.alert.alert-dismissable.alert-danger
								button.close(data-dismiss='alert', type='button') &times;
								p #{msg}
					if message.info
						each msg in message.info
							.alert.alert-dismissable.alert-info
								button.close(data-dismiss='alert', type='button') &times;
								p #{msg}
					if message.success
						each msg in message.success
							.alert.alert-dismissable.alert-success
								button.close(data-dismiss='alert', type='button') &times;
								p #{msg}
					if message.warning
						each msg in message.warning
							.alert.alert-dismissable.alert-warning
								button.close(data-dismiss='alert', type='button') &times;
								p #{msg}
			.col-sm-6.col-sm-offset-3
				row
					form(action="/reset/#{resetUser.resetPasswordToken}", method="post")
						.form-group
							label(for="password") Wachtwoord
							input#password.form-control(type="password", name="Wachtwoord", placeholder='Wachtwoord')
						.form-group
							label(for="passwordConfirm") Wachtwoord
							input#passwordConfirm.form-control(type="password", name="confirm", placeholder='Wachtwoord bevestigen')
						button.btn.btn-primary(type="submit") Wachtwoord aanpassen