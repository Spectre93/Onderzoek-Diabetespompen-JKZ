doctype html
html
	head
		meta(charset='utf-8')
		title= title
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', type='text/css', href='css/bootstrap.min.css')
		link(rel='stylesheet/less', type='text/css', href='/css/variables.less')
		link(rel='stylesheet/less', type='text/css', href='/css/bootstrap.less')
		script(src='http://code.jquery.com/jquery-2.1.1.min.js')
		script(src='js/bootstrap.min.js')
	body
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header
					a.navbar-brand(href='./') Diabetespompen
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
						span.icon-bar
						span.icon-bar
						span.icon-bar
				#navbar-main.navbar-collapse.collapse
					ul.nav.navbar-nav.navbar-right
						if (readFile || items)
							li
								a(href='/graph') Grafiek
							li
								a(href='/readings') Waarden
						else
							li
								a(href='/fileupload') Uploaden
						if !user
							li
								a(href='/register') Registreren
						else
							li
								a(href='/profile') Profiel
							li
								a(href='/logout') Afmelden
		.container
			.bs-docs-section
				.page-header
					.row
						.col-lg-12
							h1(style='margin-top:1.5em') #{header}
				.row
					if messages
						if messages.error
							each msg in messages.error
								.alert.alert-dismissable.alert-danger
									button.close(data-dismiss='alert', type='button') &times;
									p #{msg}
						if messages.info
							each msg in messages.info
								.alert.alert-dismissable.alert-info
									button.close(data-dismiss='alert', type='button') &times;
									p #{msg}
						if messages.success
							each msg in messages.success
								.alert.alert-dismissable.alert-success
									button.close(data-dismiss='alert', type='button') &times;
									p #{msg}
						if messages.warning
							each msg in messages.warning
								.alert.alert-dismissable.alert-warning
									button.close(data-dismiss='alert', type='button') &times;
									p #{msg}
					block body