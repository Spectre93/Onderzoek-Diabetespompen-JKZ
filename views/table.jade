extends ./layout.jade

block head
	script(type='text/javascript', src='js/table.js')
	script(type='text/javascript', src='js/dataTables/jquery.dataTables.min.js')
	script(type='text/javascript', src='js/dataTables/dataTables.bootstrap.min.js')
	link(rel='stylesheet', type="text/css", href='css/dataTables/dataTables.bootstrap.min.css')
		
block body
	.container
		table#datatable.table.table-striped
			thead#tableHeader
				tr
					each fieldName in Results.meta.fields
						th= fieldName
			tbody#tableBody
				each entry in Results.data
					tr
						each field in entry
							td= field